<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>

<%= link_to "Edit this task", edit_task_path(@task) %>
<%= link_to "Back to tasks", tasks_path %>
<%= link_to "Delete this task", task_path(@task),
      method: :delete,
      data: { confirm: "are you sure you want to delete this task?" } %>
